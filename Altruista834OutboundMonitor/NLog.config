<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Warn">
  <targets>
    <target xsi:type="File" name="allLog"
            fileName="${basedir}/logs/altruista-monitor-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${threadid}|${logger}|${message} ${exception:format=tostring}" />
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level}|${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="allLog,console" />
  </rules>
</nlog>
